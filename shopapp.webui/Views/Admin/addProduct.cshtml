@model Product
@{
    Layout="_Layout3";
}

<div class="row">
    <h1>Urun Ekle</h1>
    <hr>
</div>
<form method="POST">
    <div class="form-group">
        <label for="Name">Isim</label>
        <input asp-for="Name"  class="form-control" type="text">
        <span asp-validation-for="Name" class="text-danger"></span>  
    </div>
    <div class="form-group">
        <label for="Price">Fiyat</label>
        <input asp-for="Price"  class="form-control" type="text">
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Description">Aciklama</label>
        <input asp-for="Description"  class="form-control" type="text">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="ImageUrl">Resim Dizini</label>
        <input asp-for="ImageUrl"  class="form-control" type="text">
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>
    @if (ViewBag.control==1)
    {
        <div class="alert alert-success">
            Ürün başarıyla eklendi.
        </div>
    }
    <button type="submit" class="btn btn-primary">Ekle</button>
</form>
<hr>