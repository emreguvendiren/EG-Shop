@model User
<div class="row">
    <div class="col-md-8">
        <form class="form-group" action="">
            <div class="form-group">
                <label for="UserName" class="text-center">Kullanici Adi</label>
                <input type="text" value="@Model.UserName.ToUpper()" class="form-control" readonly>
            </div>
            <div class="form-group">
                <label for="FirstName" class="text-center">Isim</label>
                <input type="text" value="@Model.FirstName.ToUpper()" class="form-control" readonly>
            </div>
            <div class="form-group">
                <label for="FirstName" class="text-center">Soyisim</label>
                <input type="text" value="@Model.LastName.ToUpper()" class="form-control" readonly>
            </div>
            <div class="form-group">
                <label for="FirstName" class="text-center">Email</label>
                <input type="text" value="@Model.Email" class="form-control" readonly>
            </div>
            <div class="form-group">
                <label for="FirstName" class="text-center">Email Durumu</label>
                <input type="text" value="ONAYLI" class="form-control" readonly>
            </div>
        </form>
    </div>
    <div class="col-md-4">
        <div class="text-center">
            <img src="~/img/user.png" alt="" height="200px" width="200px">
        </div>
    </div>
</div>
