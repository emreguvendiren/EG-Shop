@model Admin
@{
    Layout="";
}
<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<link rel="stylesheet" href="~/css/admin.css">
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.4.1/css/all.css">

<link rel="icon" href="~/img/logo.png" type="image/x-icon">     
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-T8Gy5hrqNKT+hzMclPo118YTQO6cYprQmhrYwIiQ/3axmI1hQomh7Ud2hPOy8SP1" crossorigin="anonymous">
<title>Admin Sayfasi</title>
<body class="home">
    <div class="container-fluid display-table">
        <div class="row display-table-row">
            <div class="col-md-2 col-sm-1 hidden-xs display-table-cell v-align box" id="navigation">
                <div class="logo">
                    <a hef="home.html"><img src="~/img/logo.png" alt="merkery_logo" class="" width="40" height="150">
                        <img src="http://jskrishna.com/work/merkury/images/circle-logo.png" alt="merkery_logo" class="visible-xs visible-sm circle-logo">
                    </a>
                </div>
                <div class="navi">
                    <ul>
                        <li class="active"><a href="/admin/index" ><i class="fa fa-home"  aria-hidden="true"></i><span class="hidden-xs hidden-sm">Ana Sayfa</span><i class="fa fa-fw fa-angle-down pull-right"></i></a></li>
                        <li><a href="/admin/products" ><i class="fa fa-tasks" aria-hidden="true"></i><span class="hidden-xs hidden-sm">Aktif Ürünler</span></a></li>
                         <li><a href="/admin/addproducts" ><i class="fa fa-solid fa-plus" aria-hidden="true"></i><span class="hidden-xs hidden-sm">Ürün Ekle</span></a></li>
                        <li><a href="/admin/users"><i class="fa fa-calendar" aria-hidden="true"></i><span class="hidden-xs hidden-sm">Kullanicilar</span></a></li>
                        
                    </ul>
                </div>
            </div>
            <div class="col-md-10 col-sm-11 display-table-cell v-align" >
                <div class="row"  >
                    <header id="clr">
                        <div class="col-md-7">
                            <nav class="navbar-default pull-left">
                                <div class="navbar-header">
                                    <button type="button" class="navbar-toggle collapsed" data-toggle="offcanvas" data-target="#side-menu" aria-expanded="false">
                                        <span class="sr-only">Toggle navigation</span>
                                        <span class="icon-bar"></span>
                                        <span class="icon-bar"></span>
                                        <span class="icon-bar"></span>
                                    </button>
                                </div>
                            </nav>
                            
                        </div>
                        
                        <div class="col-md-4" >
                            <div class="header-rightside">
                                <ul class="list-inline header-top pull-right">
                                    <li>
                                        <img src="~/img/user.png" alt="" width="30" height="30"> 
                                        
                                    </li>
                                    <li class="mr-5">
                                        @* @Model.name @Model.surName *@
                                    </li>

                                </ul>
                            </div>
                        </div>
                    </header>
                </div>
                <div class="user-dashboard">
                    @RenderBody()
                </div>
            </div>
        </div>

    </div>


</body>








